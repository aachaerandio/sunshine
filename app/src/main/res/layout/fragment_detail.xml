<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.sunshine.android.example.com.sunshine.DetailActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/weekDay"
        android:text="weekDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/weekDay"
        android:layout_marginLeft="16dp"
        android:textColor="#646464"
        android:text="June 18"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_below="@id/day"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/maxTemp"
            android:textSize="96sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20ยบ"
            android:layout_toEndOf="@+id/day"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/weekDay"
            android:layout_toRightOf="@+id/day" />

        <TextView
            android:id="@+id/minTemp"
            android:textSize="48sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12ยบ"
            android:textColor="#646464"
            android:layout_toEndOf="@+id/weekDay"
            android:layout_toRightOf="@+id/day" />

        </LinearLayout>


    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:layout_marginRight="35dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/textView"
        android:layout_marginRight="27dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:id="@+id/humidity"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:id="@+id/pressure"
        android:layout_below="@+id/humidity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:id="@+id/wind"
        android:layout_below="@+id/pressure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textSize="22sp"/>


</RelativeLayout>
